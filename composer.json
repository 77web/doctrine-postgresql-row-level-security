{
    "name": "linkage/doctrine-row-level-security",
    "type": "library",
    "require": {
        "doctrine/dbal": "^3.0",
        "doctrine/orm": "^2.14",
        "php": ">=8.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "friendsofphp/php-cs-fixer": "^3.15",
        "phpstan/phpstan": "^1.10"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Linkage\\DoctrineRowLevelSecurity\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Linkage\\DoctrineRowLevelSecurity\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Hiromi Hishida",
            "email": "hiromi-hishida@linkage-inc.co.jp"
        }
    ],
    "scripts": {
        "cs": [
            "@php ./vendor/bin/php-cs-fixer fix -v --dry-run"
        ],
        "cs-fix": [
            "@php ./vendor/bin/php-cs-fixer fix -v"
        ],
        "phpstan": [
            "@php ./vendor/bin/phpstan"
        ]
    }
}
